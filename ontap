class categoryontap1 {
  String image;
  var tap;
  String text;
  final more;

  categoryontap1(
      {required this.image,
      required this.tap,
      required this.text,
      required this.more});
}

class categoryontap extends StatefulWidget {
  const categoryontap({Key? key}) : super(key: key);

  @override
  State<categoryontap> createState() => _categoryontapState();
}

class _categoryontapState extends State<categoryontap> {
  List<categoryontap1> list = [
    categoryontap1(
        more: '''    
        kurti
        sari
        lahengha
        choli''',
        image: "yaksh_img/waer/WOMAN (2).png",
        tap: womanswaer(),
        text: 'Womans wear'),
    categoryontap1(
        more: '''
        T-shirts
        jens
        top''',
        image: "yaksh_img/waer/woman.png",
        tap: womanswaer(),
        text: 'Womans wear'),
    categoryontap1(
        more: '''
        T-shirts
        jens
        pants
        shirts
        kurta''',
        image: "yaksh_img/waer/kids.png",
        tap: kidswaer(),
        text: 'Kids wear'),
    categoryontap1(
        more: '''
        kurta
        shirts
        pants
        t-shirts''',
        image: "yaksh_img/waer/mans.png",
        tap: manswear(),
        text: 'Mans wear'),
    categoryontap1(
        more: '''
        shervanis
        kurta
        formals''',
        image: "yaksh_img/waer/MANS (2).png",
        tap: manswear(),
        text: 'Mans wear'),
  ];
  @override
  Widget build(BuildContext context) {
    return Scaffold(
      backgroundColor: Colors.black,
      body: SingleChildScrollView(
        child: SafeArea(
          child: Column(
            children: [
              Container(
                height: MediaQuery.of(context).size.height,
                width: MediaQuery.of(context).size.width,
                child: ListView.builder(
                  physics: BouncingScrollPhysics(),
                  padding: EdgeInsets.only(bottom: 100),
                  itemCount: list.length,
                  itemBuilder: (context, index) {
                    return InkWell(
                      onTap: () {
                        Navigator.push(
                            context,
                            MaterialPageRoute(
                              builder: (context) => list[index].tap,
                            ));
                      },
                      child: Container(
                        height: 200,
                        width: 100,
                        child: Padding(
                          padding: const EdgeInsets.all(3),
                          child: Container(
                            decoration: BoxDecoration(
                                borderRadius: BorderRadius.circular(10),
                                boxShadow: [
                                  BoxShadow(
                                      color: Color.fromARGB(255, 255, 250, 250),
                                      blurRadius: 0)
                                ],
                                gradient: LinearGradient(
                                  begin: Alignment.topRight,
                                  end: Alignment.bottomLeft,
                                  colors: [
                                    Color.fromARGB(255, 6, 137, 181),
                                    Colors.white,
                                  ],
                                )
                                // image: DecorationImage(
                                //     image: AssetImage(
                                //       "yaksh_img/download bg/backg.jpg",
                                //     ),
                                //     fit: BoxFit.cover),
                                ),
                            child: Row(
                              mainAxisAlignment: MainAxisAlignment.spaceAround,
                              children: [
                                Image.asset(
                                  list[index].image,
                                  fit: BoxFit.contain,
                                ),
                                Expanded(
                                  child: Container(
                                    width: 250,
                                    child: Padding(
                                      padding: const EdgeInsets.all(0),
                                      child: Column(
                                        crossAxisAlignment:
                                            CrossAxisAlignment.end,
                                        children: [
                                          Container(
                                            decoration: BoxDecoration(
                                                color: Color.fromARGB(
                                                    110, 255, 248, 248),
                                                borderRadius: BorderRadius.all(
                                                    Radius.circular(10))),
                                            child: Padding(
                                              padding:
                                                  const EdgeInsets.all(4.0),
                                              child: Text(
                                                list[index].text,
                                                style: TextStyle(
                                                    fontSize: 20,
                                                    color: Color.fromARGB(
                                                        255, 255, 255, 255)),
                                              ),
                                            ),
                                          ),
                                          Text(
                                            list[index].more,
                                            style: TextStyle(
                                                fontSize: 17,
                                                color: Color.fromARGB(
                                                    255, 255, 255, 255)),
                                          )
                                        ],
                                      ),
                                    ),
                                  ),
                                ),
                              ],
                            ),
                          ),
                        ),
                      ),
                    );
                  },
                ),
              ),
            ],
          ),
        ),
      ),
    );
  }
}

