class product {
  String image;
  String text;
  var tap;
  Color color;
  Color textcolor;
  product(
      {required this.image,
      required this.text,
      required this.tap,
      required this.color,
      required this.textcolor});
}

class product1 extends StatefulWidget {
  @override
  State<product1> createState() => _product1State();
}

class _product1State extends State<product1> {
  List<product> list = [
    product(
        textcolor: Colors.white,
        color: Color.fromRGBO(100, 181, 246, 1),
        image: "yaksh_img/landscap/download__1_-removebg-preview.png",
        text: "Camera",
        tap: camera()),
    product(
        textcolor: Colors.black,
        color: Colors.white,
        image: "yaksh_img/landscap/download__2_-removebg-preview.png",
        text: "Drons",
        tap: dron()),
    product(
        color: Color.fromRGBO(100, 181, 246, 1),
        textcolor: Colors.white,
        image: "yaksh_img/landscap/download__3_-removebg-preview.png",
        text: "Mobiles",
        tap: mobile()),
    product(
        color: Colors.white,
        textcolor: Colors.black,
        image: "yaksh_img/landscap/download__4_-removebg-preview.png",
        text: "T.V.",
        tap: TV()),
    product(
        color: Colors.white,
        textcolor: Colors.black,
        image: 'yaksh_img/landscap/download-removebg-preview.png',
        text: "Gamepad",
        tap: Gamepad()),
    product(
        color: Color.fromRGBO(100, 181, 246, 1),
        textcolor: Colors.white,
        image: 'yaksh_img/landscap/download__18_-removebg-preview.png',
        text: "AC",
        tap: AC()),
    product(
        color: Colors.white,
        textcolor: Colors.black,
        image: 'yaksh_img/landscap/earphone.jpg',
        text: "Earphones",
        tap: earphone()),
    product(
        color: Color.fromRGBO(100, 181, 246, 1),
        textcolor: Colors.white,
        image: 'yaksh_img/landscap/headphone.png',
        text: "Headphones",
        tap: headphone()),
  ];
  @override
  Widget build(BuildContext context) {
    return Container(
      padding: EdgeInsets.all(15),
      alignment: Alignment.center,
      height: 270,
      width: MediaQuery.of(context).size.width,
      child: GridView.builder(
        physics: NeverScrollableScrollPhysics(),
        padding: EdgeInsets.all(0),
        itemCount: list.length,
        gridDelegate: SliverGridDelegateWithFixedCrossAxisCount(
            crossAxisCount: 4, mainAxisExtent: 110, childAspectRatio: 1 / 1),
        itemBuilder: (context, index) {
          return Container(
            decoration: BoxDecoration(
                boxShadow: [BoxShadow(blurRadius: 8, color: Colors.black)],
                borderRadius: BorderRadius.only(
                    bottomRight: Radius.circular(10),
                    topLeft: Radius.circular(10)),
                // color: list[index].color,
                color: Colors.white),
            child: InkWell(
              onTap: () {
                Navigator.push(
                    context,
                    MaterialPageRoute(
                      builder: (context) => list[index].tap,
                    ));
              },
              child: Column(
                mainAxisAlignment: MainAxisAlignment.spaceBetween,
                children: [
                  Container(
                      alignment: Alignment.center,
                      height: 70,
                      width: 70,
                      child: Image.asset(
                        list[index].image,
                        fit: BoxFit.contain,
                      )),
                  Padding(
                    padding: const EdgeInsets.only(bottom: 10),
                    child: Text(
                      list[index].text,
                      // style: TextStyle(color: list[index].textcolor),
                    ),
                  )
                ],
              ),
            ),
          );
        },
      ),
    );
  }
}

