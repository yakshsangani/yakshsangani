}

class tpbrandchoicedetails extends StatefulWidget {
  const tpbrandchoicedetails({Key? key}) : super(key: key);

  @override
  State<tpbrandchoicedetails> createState() => _tpbrandchoicedetailsState();
}

class _tpbrandchoicedetailsState extends State<tpbrandchoicedetails> {
  var logos = [
    'yaksh_img/logos/logo.png',
    'yaksh_img/logos/logo1.jpg',
    'yaksh_img/logos/logo2.png',
    'yaksh_img/logos/logo4.png',
    'yaksh_img/logos/logo5.jpg',
    'yaksh_img/logos/images.jpg',
    'yaksh_img/logos/logo7.png',
    'yaksh_img/logos/logo8.png',
  ];
  @override
  Widget build(BuildContext context) {
    return ClipRRect(
      child: BackdropFilter(
        filter: ImageFilter.blur(sigmaX: 3, sigmaY: 3),
        child: Container(
          color: Colors.white,
          height: 80,
          width: MediaQuery.of(context).size.width,
          child: GridView.builder(
            scrollDirection: Axis.horizontal,
            itemCount: logos.length,
            gridDelegate: SliverGridDelegateWithMaxCrossAxisExtent(
                maxCrossAxisExtent: 200,
                crossAxisSpacing: 20,
                mainAxisSpacing: 20),
            itemBuilder: (context, index) {
              return InkWell(
                onTap: () {
                  Navigator.push(context, MaterialPageRoute(
                    builder: (context) {
                      return logo();
                    },
                  ));
                },
                child: Container(
                  decoration: BoxDecoration(
                    image: DecorationImage(
                      image: AssetImage(
                        logos[index],
                      ),
                    ),
                  ),
                ),
              );
            },
          ),
        ),
      ),
    );
  }
}

class Ourblogposts extends StatefulWidget {
  const Ourblogposts({Key? key}) : super(key: key);

  @override
  State<Ourblogposts> createState() => _OurblogpostsState();
}

class _OurblogpostsState extends State<Ourblogposts> {
  var mark = [
    'yaksh_img/logos/logo.png',
    'yaksh_img/logos/logo1.jpg',
    'yaksh_img/logos/logo2.png',
    'yaksh_img/logos/logo4.png',
    'yaksh_img/logos/logo5.jpg',
  ];
  final newslist = [
    '''Seating Collection 
    Inspiration
is not enough for people''',
    '''Exterior ideas : 10 colored
     Fiber Garden seates''',
    '''Creative water features
     and exterior design''',
    '''Seating Collection 
    Inspiration
is not enough for people''',
    '''Creative water features
     and exterior design''',
  ];
  final newsdate = [
    'May 1,2018',
    'May 24,2023',
    'Apil 30,2018',
    'May 25 2005',
    'March 13 2005'
  ];
  @override
  Widget build(BuildContext context) {
    return ClipRRect(
      child: BackdropFilter(
        filter: ImageFilter.blur(sigmaX: 5, sigmaY: 5),
        child: Container(
            color: Color.fromARGB(102, 228, 222, 222),
            child: Column(
              mainAxisAlignment: MainAxisAlignment.start,
              crossAxisAlignment: CrossAxisAlignment.start,
              children: [
                Container(
                  decoration: BoxDecoration(
                    borderRadius: BorderRadius.circular(5),
                    color: Color.fromARGB(113, 255, 255, 255),
                  ),
                  child: Padding(
                    padding: const EdgeInsets.all(5.0),
                    child: Row(
                      mainAxisAlignment: MainAxisAlignment.spaceBetween,
                      children: [
                        Text(
                          "Our blog posts",
                          style: TextStyle(fontSize: 25),
                        ),
                        TextButton(
                          onPressed: () {},
                          child: Text(
                            "See all",
                            style: TextStyle(color: Colors.grey),
                          ),
                        )
                      ],
                    ),
                  ),
                ),
                ClipRRect(
                  child: BackdropFilter(
                    filter: ImageFilter.blur(sigmaX: 3, sigmaY: 3),
                    child: Container(
                      height: 200,
                      color: Color.fromARGB(110, 255, 255, 255),
                      child: ListView.builder(
                        padding: EdgeInsets.zero,
                        dragStartBehavior: DragStartBehavior.start,
                        scrollDirection: Axis.vertical,
                        itemCount: mark.length,
                        itemBuilder: (context, index) {
                          return Container(
                            margin: EdgeInsets.zero,
                            padding: EdgeInsets.zero,
                            alignment: Alignment.topCenter,
                            height: 100,
                            width: MediaQuery.of(context).size.width,
                            child: Card(
                              elevation: 10,
                              child: Row(
                                crossAxisAlignment: CrossAxisAlignment.start,
                                mainAxisAlignment: MainAxisAlignment.start,
                                children: [
                                  Container(
                                    child: Image.asset(
                                      mark[index],
                                      fit: BoxFit.contain,
                                    ),
                                    width: 150,
                                  ),
                                  Column(
                                    crossAxisAlignment:
                                        CrossAxisAlignment.start,
                                    mainAxisAlignment: MainAxisAlignment.center,
                                    children: [
                                      Text(newslist[index]),
                                      SizedBox(height: 10),
                                      Text(
                                        newsdate[index],
                                        style: TextStyle(color: Colors.grey),
                                      )
                                    ],
                                  )
                                ],
                              ),
                            ),
                          );
                        },
                      ),
                    ),
                  ),
                ),
              ],
            )),
      ),
    );
  }
}

