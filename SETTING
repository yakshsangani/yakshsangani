  void forgetpass() async {
    http.Response res = await Authorepoo.registerapii(email: emaill);
    {
      print(res.body);
      if (res != null) {
        var resopnse = jsonDecode(res.body);
        print(emaill);
        if (resopnse["message"] == "EmailID is Right") {
          print(emaill);
          Fluttertoast.showToast(
              msg: resopnse["message"],
              toastLength: Toast.LENGTH_SHORT,
              gravity: ToastGravity.SNACKBAR,
              timeInSecForIosWeb: 1,
              backgroundColor: Color.fromARGB(248, 2, 145, 255),
              textColor: Color.fromARGB(255, 255, 254, 254),
              fontSize: 16.0)
            ..then((value) => Navigator.push(
                context,
                MaterialPageRoute(
                  builder: (context) => forgetchangepwd(),
                )));
        } else {
          Fluttertoast.showToast(
              msg: resopnse["message"],
              toastLength: Toast.LENGTH_SHORT,
              gravity: ToastGravity.SNACKBAR,
              timeInSecForIosWeb: 1,
              backgroundColor: Color.fromARGB(248, 2, 145, 255),
              textColor: Color.fromARGB(255, 255, 254, 254),
              fontSize: 16.0);
        }
      }
    }
  }
