                                selectedTextColor: Colors.white,
                                text: '✔️',
                                onPress: () {
                                  if (formkeyy.currentState!.validate()) {
                                    changepassword();
                                  }
                                }),
                          ],
                        ),
                      ],
                    ),
                  ),
                ),
              ),
            ),
          ),
        )
      ],
    )));
  }

  void changepassword() async {
    email = email.isEmpty ? storage.read('email') : email;
    http.Response res =
        await Authorepo.registerapi(oldpwd: oldpwd, pwd: pwd, email: email);
    {
      print(res.body);
      if (res != null) {
        var resopnse = jsonDecode(res.body);
        print(oldpwd);
        print(pwd);
        print(email);
        if (resopnse["message"] == "Successfully Password Changed") {
          setState(() {
            storage.write('pwd', pwd);
          });
          Fluttertoast.showToast(
              msg: resopnse["message"],
              toastLength: Toast.LENGTH_SHORT,
              gravity: ToastGravity.SNACKBAR,
              timeInSecForIosWeb: 1,
              backgroundColor: Color.fromARGB(248, 2, 145, 255),
              textColor: Color.fromARGB(255, 255, 254, 254),
              fontSize: 16.0)
            ..then((value) => Navigator.of(context).pop());
        } else {
          Fluttertoast.showToast(
              msg: resopnse["message"],
              toastLength: Toast.LENGTH_SHORT,
              gravity: ToastGravity.SNACKBAR,
              timeInSecForIosWeb: 1,
              backgroundColor: Color.fromARGB(248, 2, 145, 255),
              textColor: Color.fromARGB(255, 255, 254, 254),
              fontSize: 16.0);
        }
      }
    }
  }
}

class Authorepo {
  static Future registerapi(
      {required String pwd,
      required String oldpwd,
      required String email}) async {
    return get(Uri.parse(
        "${Registerupi.baseurl}?action=chgpwd&pwd=$pwd&oldpwd=$oldpwd&email=$email"));
  }
}

class Registerupi {
  static String baseurl = "https://vstechno.co.in/news/api/user.php";
}

