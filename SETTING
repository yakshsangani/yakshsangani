class forgetchangepwd extends StatefulWidget {
  const forgetchangepwd({super.key});

  @override
  State<forgetchangepwd> createState() => _forgetchangepwdState();
}

class _forgetchangepwdState extends State<forgetchangepwd> {
  var _formKey = GlobalKey<FormState>();
  String email = storage.read('email');
  String npwd = '';
  String copwd = '';
  @override
  Widget build(BuildContext context) {
    return SafeArea(
      child: Scaffold(
        backgroundColor: Colors.black,
        body: Stack(
          children: [
            Container(
              height: MediaQuery.of(context).size.height,
