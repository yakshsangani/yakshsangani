  void updateprofile() async {
    fname = fname == "" ? storage.read('firstname') : fname;
    lname = lname.isEmpty ? storage.read('lastname') : lname;
    email = email.isEmpty ? storage.read('email') : email;
    mno = mno.isEmpty ? storage.read('mobileno') : mno;
    // Address = Address.isEmpty ? updatestorege.read('Address') : Address;
    // City = City.isEmpty ? updatestorege.read('City') : City;
    // Stat = Stat.isEmpty ? updatestorege.read('State') : Stat;
    Users_id = Users_id.isEmpty ? storage.read('Users_id') : Users_id;
    print(fname);
    print(lname);
    print(email);
    print(mno);
    print(Address);
    print(City);
    print(Stat);
    print(Users_id);
    http.Response res = await Authorepo.registerapi(
        fname: fname,
        lname: lname,
        email: email,
        mno: mno,
        Address: Address,
        City: City,
        Stat: Stat,
        Users_id: Users_id);

    {
      print(res.body);

      if (res != null) {
        var resopnse = jsonDecode(res.body);

        print(resopnse);
        if (resopnse["message"] == 'Your profile Successfully updated') {
          print(resopnse);
          setState(() {
            updatestorege.write('fname', fname);
            updatestorege.write('lname', lname);
            updatestorege.write('email', email);
            updatestorege.write('mno', mno);
            updatestorege.write('Address', Address);
            updatestorege.write('City', City);
            updatestorege.write('State', Stat);
            updatestorege.write('Users_id', Users_id);
          });

          Fluttertoast.showToast(
              msg: resopnse["message"],
              toastLength: Toast.LENGTH_SHORT,
              gravity: ToastGravity.SNACKBAR,
              timeInSecForIosWeb: 1,
              backgroundColor: Color.fromARGB(248, 2, 145, 255),
              textColor: Color.fromARGB(255, 255, 254, 254),
              fontSize: 16.0)
            ..then((value) => Navigator.push(
                context,
                MaterialPageRoute(
                  builder: (context) => startt(),
                )));
        } else {
          Fluttertoast.showToast(
              msg: resopnse["message"],
              toastLength: Toast.LENGTH_SHORT,
              gravity: ToastGravity.SNACKBAR,
              timeInSecForIosWeb: 1,
              backgroundColor: Color.fromARGB(248, 2, 145, 255),
              textColor: Color.fromARGB(255, 255, 254, 254),
              fontSize: 16.0);
        }
      }
    }
  }
}

class registerupi {
  static String baseurl = 'https://vstechno.co.in/news/api/user.php';
}

class Authorepo {
  static Future registerapi({
    required String fname,
    required String lname,
    required String email,
    required String mno,
    required String Address,
    required String City,
    required String Stat,
    required String Users_id,
  }) async {
    return get(Uri.parse(
        "${registerupi.baseurl}?action=updprofile&fname=$fname&lname=$lname&email=$email&mno=$mno&addr=$Address&city=$City&state=$Stat&user_id=$Users_id"));
  }
}

extension mobilenumber on String {
  bool validateMobilE() {
    return RegExp(r'^.{10,}$').hasMatch(this);
  }
}
